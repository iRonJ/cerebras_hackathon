{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (cerebras_os)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/cerebras_os/bin/Debug/net8.0/cerebras_os.dll",
            "args": [],
            "cwd": "${workspaceFolder}/cerebras_os",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/cerebras_os/Views"
            }
        },
        {
            "name": "Node: backend (cerebrasv2)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev:server"
            ],
            "cwd": "${workspaceFolder}/cerebrasv2",
            "console": "integratedTerminal",
            "restart": true,
            "envFile": "${workspaceFolder}/cerebrasv2/.env",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Vite Frontend (cerebrasv2)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev:client"
            ],
            "cwd": "${workspaceFolder}/cerebrasv2",
            "console": "integratedTerminal",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "envFile": "${workspaceFolder}/cerebrasv2/.env"
        },
        {
            "name": "Debug Server v3",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/cerebrasv3/node_modules/.bin/tsx",
            "args": [
                "server/index.ts"
            ],
            "cwd": "${workspaceFolder}/cerebrasv3",
            "envFile": "${workspaceFolder}/cerebrasv3/.env",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/cerebrasv3/**",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Launch Full Stack v3",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/cerebrasv3",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/cerebrasv3/.env"
        }
        
    ]
}
